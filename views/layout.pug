doctype html
html
  head
    title= "Todo App with Nodejs, express, mongoDB and pug"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet')
    
    style 
      include ../public/stylesheets/style.css
  body.vh-100
    block content

    include ./modal.pug

    
    
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js")
    script(src="http://code.jquery.com/ui/1.11.2/jquery-ui.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js")
    script.
        $(function () {
          $("#sortable-row").sortable({
            placeholder: "ui-state-highlight"
          });
        });
        function saveOrder() {
          var menu_id = new Array();
          $('ul#sortable-row li .active-task').each(function () {
            menu_id.push($(this).attr("id"));
          });
          document.getElementById("row_order").value = menu_id;
          $( "#menu_order_form" ).submit();
        }
    script(src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
